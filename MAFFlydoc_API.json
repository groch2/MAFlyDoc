{
  "openapi": "3.0.1",
  "info": {
    "title": "MAFlyDoc.WebApi",
	"description": "API permettant l'envoi de courrier physique via [le webservice Flydoc proposé par la société Esker](https://doc.esker.com/eskerondemand/cv_ly/en/manager/startpage.htm#../../webservices/Content/Sending_documents_v2.html?TocPath=Document%2520Delivery%257CSending%2520documents%257CSending%2520documents%2520using%2520Web%2520services%257C_____1)"
    "version": "1.0"
  },
  "paths": {
    "/envoi": {
      "post": {
        "tags": [
          "Default"
        ],
		"description" : "Permet l'envoi d'un ou de plusieurs documents issu(s) de la GED"
        "parameters": [
          {
            "name": "recipientAddressIdLocation",
            "in": "query",
			"description": "Identifie quelle adresse sera choisie : AddressIdProperty -> Un identifiant technique AdresseID venant de VIGI AddressIdFromCompteId -> L'adresse rattachée au compte dans VIGI"
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/RecipientAddressIdLocation"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EnvoiCommand"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/EnvoiCommand"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/EnvoiCommand"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/EnvoiCommandResult"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EnvoiCommandResult"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/EnvoiCommandResult"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "Default"
        ],
		"description": "Permet de récupérer tous les envois correspondant ( à un compte, ou une personne, ou un identifiant Flydoc d'envoi)"
        "parameters": [
          {
            "name": "personneId",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "compteId",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "transportId",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/EnvoiRequestQueryResult"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/EnvoiRequestQueryResult"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/EnvoiRequestQueryResult"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/envoi/{envoi-id}": {
      "get": {
        "tags": [
          "Default"
        ],
		"description": "Permet de récupérer les informations d'un envoi avec l'identifiant d'envoi MAF"
        "parameters": [
          {
            "name": "envoi-id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/EnvoiRequestQueryResult"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EnvoiRequestQueryResult"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/EnvoiRequestQueryResult"
                }
              }
            }
          }
        }
      }
    },
    "/preuve-de-depot": {
      "get": {
        "tags": [
          "Default"
        ],
		"description": "Permet de télécharger la preuve de dépot à partir d'un identifant d'envoi Flydoc",
        "parameters": [
          {
            "name": "transport-id",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/attachments-list": {
      "get": {
        "tags": [
          "Default"
        ],
		"description": "liste l'ensemble des documents disponible au téléchargement sur un envoi",
        "parameters": [
          {
            "name": "envoi-id",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/EnvoiAttachement"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/EnvoiAttachement"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/EnvoiAttachement"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/first-attachement": {
      "get": {
        "tags": [
          "Default"
        ],
		"description": "Permet de télécharger de le premier document attaché à un envoi",
        "parameters": [
          {
            "name": "transport-id",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AttachementType": {
        "enum": [
          "ProofOfDeposit",
          "AcknowledgmentOfReceipt",
          "OtherDocuments"
        ],
        "type": "string"
      },
      "EnvoiAttachement": {
        "type": "object",
        "properties": {
          "fileName": {
            "type": "string",
            "nullable": true
          },
          "attachementType": {
            "$ref": "#/components/schemas/AttachementType"
          }
        },
        "additionalProperties": false
      },
      "EnvoiCommand": {
        "type": "object",
        "properties": {
          "sender": {
            "$ref": "#/components/schemas/SenderEnvoiCommand"
          },
          "recipient": {
            "$ref": "#/components/schemas/RecipientEnvoiCommand"
          },
          "mainDocumentGedId": {
			"description" : "L'identifiant GED (GED ID) du document document principal"  
            "type": "string",
            "nullable": true
          },
          "attachementsGedIdList": {
            "type": "array",
			"description" : "Un tableau d'identifiants GED (GED ID) représentant les pièces jointes"  
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "mailPostage": {
			"description":"Niveau de priorité de l'envoi du courrier",   
            "$ref": "#/components/schemas/MailPostage"
          },
          "subject": {
			"description":"Objet du courrier. N'apparait pas dans le courrier mais permet de retrouver le courrier dans l'interface Flydoc (champ Objet)",
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "EnvoiCommandResult": {
        "type": "object",
        "properties": {
          "envoiId": {
			"description" : "identifiant MAF d'envoi du courrier (généré par l'application MAFlydoc)",  
            "type": "integer",
            "format": "int32"
          },
          "flyDocTransportId": {
			"description" : "identifiant côté Esker (Flydoc) de l'envoi du courrier",    
            "type": "string",
            "nullable": true
          },
          "flyDocSubmissionId": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "EnvoiRequestQueryResult": {
        "type": "object",
        "properties": {
          "dateTimeEnvoi": {
            "type": "string",
            "format": "date-time"
          },
          "sender": {
            "$ref": "#/components/schemas/SenderEnvoiQuery"
          },
          "recipient": {
            "$ref": "#/components/schemas/RecipientEnvoiQuery"
          },
          "subject": {
            "type": "string",
            "nullable": true
          },
          "mailPostage": {
            "$ref": "#/components/schemas/MailPostage"
          },
          "status": {
            "type": "string",
            "nullable": true
          },
          "transportId": {
            "type": "string",
            "nullable": true
          },
          "submissionId": {
            "type": "string",
            "nullable": true
          },
          "isCourrierPoste": {
            "type": "boolean"
          },
          "dateCourrierPoste": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "isCourrierRetourneNonDelivre": {
            "type": "boolean"
          },
          "dateCourrierRetourneNonDelivre": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "MailPostage": {
		"description" : "niveau de priorité d'envoi du courrier" 
        "enum": [
          "PRIORITAIRE",
          "ECONOMIC",
          "RECOMMANDE"
        ],
        "type": "string"
      },
      "RecipientAddressIdLocation": {
        "enum": [
          "AddressIdProperty",
          "AddressIdFromCompteId"
        ],
        "type": "string"
      },
      "RecipientEnvoiCommand": {
        "type": "object",
		"description" :"décrit le destinataire du courrier",
        "properties": {
          "compteId": {
			"description" : "Un compte dans VIGI",  
            "type": "integer",
            "format": "int32"
          },
          "personneId": {
			"description" : "Un identifiant de personne dans VIGI",
            "type": "integer",
            "format": "int32"
          },
          "adresseId": {
			"description" : "Un identifiant technique d'adresse dans VIGI",  
            "type": "integer",
            "format": "int32",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "RecipientEnvoiQuery": {
        "type": "object",
        "properties": {
          "compteId": {
            "type": "integer",
            "format": "int32"
          },
          "personneId": {
            "type": "integer",
            "format": "int32"
          },
          "adresseId": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "postageAddress": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "SenderEnvoiCommand": {
		"description":"Defini les informations de l'expediteur du courrier"
        "type": "object",
        "properties": {
          "personFirstName": {
            "type": "string",
            "nullable": true,
			"description":"Prénom de l'expediteur"
          },
          "personLastName": {
            "type": "string",
            "nullable": true,
			"description":"Nom de l'expediteur"
          },
          "companyName": {
            "type": "string",
            "nullable": true,
			"description":"Nom de la compagnie"
          },
          "userId": {
            "type": "string",
            "nullable": true
			"description": "le collaborateur connecté (compte MAF_NT). Sert pour l'audit : savoir qui a déclenché l'envoi)"
          }
        },
        "additionalProperties": false
      },
      "SenderEnvoiQuery": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string",
            "nullable": true
          },
          "personFirstName": {
            "type": "string",
            "nullable": true
          },
          "personLastName": {
            "type": "string",
            "nullable": true
          },
          "companyName": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}